[app]

title = MarkItDown

package.name = markitdown

package.domain = org.markitdown

source.dir = .

version = 1.0.0

requirements = python3,kivy,kivymd,markitdown[all],pillow,requests,beautifulsoup4,markdownify,magika,charset-normalizer,defusedxml

orientation = portrait

fullscreen = 0

android.permissions = INTERNET,READ_EXTERNAL_STORAGE,WRITE_EXTERNAL_STORAGE

android.api = 31

android.minapi = 21

android.arch = arm64-v8a

android.enable_androidx = True

ios.codesign.allowed = False
